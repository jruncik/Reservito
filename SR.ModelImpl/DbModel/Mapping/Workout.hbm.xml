<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="SR.ModelImpl"
                   namespace="SR.ModelImpl.Model">

    <class name="Workout" table="workouts">

        <id name="Id" column="id">
            <generator class="guid" />
        </id>

        <property name="Time" column="time" not-null="true"/>
        <many-to-one name="WorkoutInfo" class="SR.ModelImpl.Model.WorkoutInfo" column="fk_workout_info" fetch="join" />

        <bag name="ClientsIds" table="workouts_and_users" inverse="false" cascade="none">
            <key>
                <column name="fk_workout" not-null="true"/>
            </key>
            <many-to-many class="User" column="fk_user"/>
        </bag>

    </class>
</hibernate-mapping>
